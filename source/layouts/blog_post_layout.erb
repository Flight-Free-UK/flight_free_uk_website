<% wrap_layout :layout do %>
  <main class="bg-white px-8 xl:px-48 py-12 xl:pt-16 xl:pb-20 text-blue-dark">
    <a href="be_inspired.html" class="text-base xl:text-lg pl-8 bg-no-repeat" style="color:#a0a0a0;background-image:url(/svg/arrow_back.svg)">View all posts</a>
    <h1 class="text-4xl xl:text-5xl text-blue-dark mt-6 mb-4 leading-tight"><%= current_article.title %></h1>
    <h2 class="text-3xl xl:text-3xl mb-8 leading-tight text-text-gray-light"><%= current_article.data.summary %></h2>
    <div class="xl:flex border-t border-b py-6 text-blue-dark items-center" style="border-color:#e7e7e7">
      <div class="flex">
        <img src="/images/blog_author_avatar.png" class="mr-4"/>
        <span class="text-lg self-center"><%= current_article.data.author %></span>
        <span class="hidden xl:block text-2xl mx-6" style="color:#d9d9d9">&bullet;</span>
      </div>
      <div class="flex items-center">
        <span><%= current_article.date.strftime("%d %b") %></span>
        <span class="text-2xl mx-6" style="color:#d9d9d9">&bullet;</span>
        <span><%= current_article.data.read_time_minute %> min read</span>
      </div>
    </div>
    <div class="blog-post-body pt-6 xl:pt-12 xl:pb-4">
      <%= yield %>
    </div>
    <div class="border-t pt-10 text-center" style="border-color:#e7e7e7">
      <a href="#"><img src="/svg/facebook_with_bg.svg" class="inline-block w-12" /></a>
      <a class="mx-4" href="#"><img src="/svg/twitter_with_bg.svg" class="inline-block w-12" /></a>
      <a href="#"><img src="/images/instagram_with_bg.png" class="inline-block w-12" /></a>
    </div>
  </main>
  <section class="bg-gray-light px-8 xl:px-48 py-12 xl:pt-24 xl:pb-16 text-blue-dark">
    <div class="flex justify-between mb-12">
      <h2 class="text-2xl xl:text-3xl">Other posts</h2>
      <div class="text-right">
        <a href="be_inspired.html" class="text-lg xl:text-xl text-orange">
          View all
          <img src="/svg/orange_arrow_right.svg" class="inline-block w-8 ml-2"/>
        </a>
      </div>
    </div>
    <div class="xl:flex justify-between">
      <div class="xl:w-1/3 xl:mr-6 mb-8 bg-white text-blue-dark">
        <%= partial "home_blog_post", locals: { article: blog.articles[0] } %>
      </div>
      <div class="xl:w-1/3 xl:mx-3 mb-8 bg-white text-blue-dark">
        <%= partial "home_blog_post", locals: { article: blog.articles[1] } %>
      </div>
      <div class="xl:w-1/3 xl:ml-6 mb-8 bg-white text-blue-dark">
        <%= partial "home_blog_post", locals: { article: blog.articles[2] } %>
      </div>
    </div>
  </section>
<% end %>
