<div class="text-sm xl:text-base mb-4 sm:mb-12 xl:mb-16 flex flex-wrap items-center">
  <span class="hidden xl:block mr-2 xl:mr-8 mb-2">Filter posts</span>
  <%= link_to "All", "/articles.html", class: "border border-blue-dark #{category == nil ? "bg-blue-dark text-gray-light" : "" } hover:bg-blue-dark hover:text-gray-light px-4 xl:px-6 py-1 mr-1 mb-2 xl:mr-4 rounded-full" %>
  <% [["Testimonials", "testimonials"], ["How-to", "how-to"], ["Explainer", "explainer"], ["Climate", "climate"], ["Policy position", "policy-position"], ["Opinion", "opinion"]].each do |label, id| %>
    <% if category_path(id) %>
      <a href="<%= category_path(id) %>" class="border border-blue-dark <%= category == id ? "bg-blue-dark text-gray-light" : "" %> mr-1 xl:mr-4 mb-2 px-4 xl:px-6 py-1 rounded-full"><%= label %></a>
    <% end %>
  <% end %>
</div>
