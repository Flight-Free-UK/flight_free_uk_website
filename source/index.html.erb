<section class="section--introduction bg-blue-dark text-gray-light bg-cover bg-center-bottom md:bg-right-bottom px-4 pt-4 xl:pt-12 pb-12" style="background-image: url(/images/pexels-tobias-bjorkli-1559821-blue-1440x810.jpg)">

  <%# start why -%>
    <%= partial "header", locals: { is_home: true } -%>
  <%# end why -%>

  <div class="section--introduction--text container mx-auto sm:px-8 xl:px-24 xxl:px-40">
    <div class="mx-auto xl:w-4/5 flex flex-col items-center">
        <h1 class="text-2xl xs:text-3xl sm:text-4xl md:text-5xl xl:text-homepage font-bold leading-tight tracking-normal text-center mb-2 md:mb-6">Are you ready to go big on climate action?</h1>
        <p class="md:w-2/3 xl:w-4/5 text-xl xl:text-3xl leading-tight text-center mb-8 xl:mb-10 max-w-2xl xl:px-8">Try the flight free challenge and see where staying grounded could take you.</p>
        <%= partial "svg/arrow_curled.svg" %>
    </div>
  </div>
</section>

<%# start how %>
    <%= partial "home_how" %>
<%# end how %>

<%# start why %>
    <%= partial "home_why" %>
<%# end why %>

<%# start take the challenge %>
    <%= partial "home_take_the_challenge" %>
<%# end take the challenge %>

