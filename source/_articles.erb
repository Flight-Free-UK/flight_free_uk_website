<div id="blog-posts" class="grid grid-cols-1 md:grid-cols-3 xl:grid-cols-5 gap-4 justify-center">
    <% articles.each do |article| %>
        <a href="<%= article.url.force_encoding("UTF-8") %>" class="w-200 h-200 justify-self-center grid grid-cols-1 hover:text-orange">
            <%- if article.data.cover_image -%>
            <img src="<%= image_path(article.data.cover_image) %>" loading="lazy" class="w-200 h-200 object-cover row-start-1 col-start-1" />
            <%- end -%>
            <div class="p-4 row-start-1 col-start-1 self-center text-center">
                <h3 class="p-2 bg-blue-dark text-gray-light text-xl xl:text-2xl leading-tight"><%= article.title %></h3>
            </div>
        </a>
    <% end %>
  <div class="hidden xl:block w-1/2 pl-4">
  </div>
</div>
<a href="#" class="hidden text-xl">Load more posts</a>