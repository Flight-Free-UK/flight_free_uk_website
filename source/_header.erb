<header id="main-header" class="relative py-4 xl:pt-10 xl:pb-8 z-20<%= " xl:px-10 mb-16" if is_home %><%= " px-4 xl:px-14 bg-blue-dark" if ! is_home %> text-gray-light">
  <div class="container mx-auto">
  <div class="flex flex-wrap justify-between">
    <div class="logo w-1/2 flex-1 flex items-end xl:mt-6">
      <a href="/">
        <%= partial "svg/logo.svg" %>
      </a>
    </div>
    <div class="xl:hidden w-1/2 flex-1 flex justify-end items-center">
      <a href="#" id="menu-toggle" class="self-center bg-no-repeat bg-center w-10 h-10" onclick="document.getElementById('main-header').classList.toggle('menu-active')" title="Open or close navigation menu"></a>
    </div>
    <div class="social-links hidden w-0 xl:flex xl:w-1/2 flex-0 flex justify-end items-start">
      <nav class="flex flex-wrap justify-center md:justify-end items-center">
	  	<% 
	  	{
		   "facebook" => "https://facebook.com/",
		   "instagram" => "https://instagram.com/",
		   "bluesky" => "https://bsky.app/profile/",
		   "linkedin" => "https://www.linkedin.com/company/",
		   "tiktok" => "https://www.tiktok.com/@"
		}.each do |name, path| %>
		<% if data.social_media[name] %>
	  	<a href="<%= path %><%= data.social_media[name] %>" class="svg w-12 h-12 flex justify-center mx-2 mb-4" target="_blank">
		  <%= partial "svg/icon-#{name}-square.svg" %>
	  	</a>
	  	<% end %>
	  	<% end %>
		<%# comment this out if annual fundraising banner is live... #%>
        <a href="https://donorbox.org/donate-to-flight-free-uk" class="custom-dbox-popup w-auto mx-1 xl:ml-4 mx-4 mb-4 px-8 py-2 border-2 border-orange rounded-2xl bg-orange hover:bg-blue-dark text-blue-dark hover:text-gray-light text-xl">DONATE</a>
      </nav>
    </div>
  </div>
  <div class="flex flex-wrap justify-end">
    <nav class="hidden xl:flex flex-col xl:flex-row flex-wrap w-full justify-end items-center gap-4 px-8 xl:pl-0 xl:pr-4 xxl:pr-8 pt-6 xl:pt-0 pb-6 xl:pb-0 text-2xl text-center">
    <% {
         "why_flight_free.html" => "Why flight free?",
         "how_to.html" => "Travel",
         "about_us.html" => "About",
         "be_inspired.html#testimonials" => "Testimonials",
         "be_inspired.html" => "Blog",
         "podcast.html" => "Podcast",
		 "https://www.tickettailor.com/events/flightfreeuk?" => "Events",
         "faq.html" => "FAQ"
       }.each do |path, name| %>
       		<% current = "#{path}" == current_page.path || path == current_page.data.menu_item || ( current_page.path.include?("travel") && "how_to" == path ) || ( current_page.path.include?("posts") && !current_page.path.include?("travel") && "articles" == path ) || ( current_page.path.include?("how_tos") && "how_to" == path ) %>
			<%# events special case #%>
			<% if name == "Events" %>
				<%= link_to name, "#{path}", class: "inline-block mb-2 xl:mb-0 border-blue-dark leading-tight text-gray-light hover:text-orange" %>
			<% else %>
	   			<%= link_to name, "/#{path}", class: "inline-block mb-2 xl:mb-0 #{!is_home ? "border-b-4" :  nil } #{current ? "border-orange" : "border-blue-dark"} leading-tight text-gray-light hover:text-orange" %>
			<% end %>
    <% end %>
    </nav>
  </div>
  </div>
</header>
