<div id="take-challenge-<%= count %>" class="relative w-140 h-140 xl:w-220 xl:h-220">
  <% if defined?(link) && link %><a href="<%= link %>"><% end %>
    <div class="w-140 h-140 xl:w-220 xl:h-220">
        <img src="<%= image %>" width="220" height="220" alt="Photograph of <%= citation %>" class="" loading="lazy" />
    </div>
    <div id="take-challenge-square-<%= count %>" class="absolute top-0 left-0 w-140 h-140 xl:w-220 xl:h-220 flex justify-center items-center bg-whiteveil backdrop-opacity-50 text-blue-dark text-center">
        <p class="w-full h-full flex flex-col justify-center items-center p-1 xl:p-2 text-base xl:text-xl leading-tight font-bold">
            <span class="quote mb-2 lg:mb-4"><%= title %></span>
            <span class="citation"><%= citation %></span>
        </p>
    </div>
  <% if defined?(link) && link %></a><% end %>
</div>
